<Window x:Class="SP_HW0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SP_HW0"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300" Background="Gray">
    <Grid>
        <Button Content="Загрузить" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Border x:Name="border" Width="200" Height="30" BorderBrush="Black" VerticalAlignment="Top" BorderThickness="1">
            <Rectangle x:Name="loadRectangle" Width="0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF932D2D" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Border>
    </Grid>
</Window>
